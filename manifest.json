{
	"manifest_version": 2,
	"name": "PolyExtend",
	"description": "Extend your stream experience",
	"version": "1.0.2",
	"icons": {"256": "icon.png"},
	"permissions": ["storage"],
	
	"content_scripts": [
		{
			"matches": ["*://*.beam.pro/*"],
			"js": [
				"js/lib/jquery.js",
				"js/lib/bigint.js",
				
				"js/main.js",
				"js/beam.js",
				
				"js/feat/emotes.js",
				"js/feat/images.js",
				"js/feat/beamlink.js",
				"js/feat/teams.js",
				"js/feat/colors.js"
			]
		},
		
		{
			"matches": ["*://*.twitch.tv/*"],
			"js": [
				"js/lib/jquery.js",
				"js/lib/bigint.js",
				
				"js/main.js",
				"js/twitch.js",
				
				"js/feat/emotes.js",
				"js/feat/images.js",
				"js/feat/beamlink.js",
				"js/feat/teams.js",
				"js/feat/colors.js"
			]
		}
	],
	
	"page_action": {
		"default_title": "PolyExtend Settings",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["js/background.js"],
		"persistent": false
	}
}
